{% include 'default/header.html.twig' %}
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>

<style>
    svg.graph-bg {
        margin: 4px;
    }

    .highcharts-figure,
    .highcharts-data-table table {
        min-width: 40%;
        max-width: 800px;
    }

    #container {
        height: 450px;
    }

    .highcharts-data-table table {
        font-family: Verdana, sans-serif;
        border-collapse: collapse;
        border: 1px solid #ebebeb;
        margin: 10px auto;
        text-align: center;
        width: 100%;
        max-width: 500px;
    }

    .highcharts-data-table caption {
        padding: 1em 0;
        font-size: 1.2em;
        color: #555;
    }

    .highcharts-data-table th {
        font-weight: 600;
        padding: 0.5em;
    }

    .highcharts-data-table td,
    .highcharts-data-table th,
    .highcharts-data-table caption {
        padding: 0.5em;
    }

    .highcharts-data-table thead tr,
    .highcharts-data-table tr:nth-child(even) {
        background: #f8f8f8;
    }

    .highcharts-data-table tr:hover {
        background: #f1f7ff;
    }
    div#graphics {
        display: flex;
    }
    .highcharts-title{
        font-weight: bold;
    }
</style>

<div id="graphics" class="row">
</div>
<script>

    function getactiveusers() {
        getJSON('/api/get-active-users-hrs.json').then(function (data) {

            data.forEach(function (value) {
                $(`#graphics div#${value.ga}`).remove();
                $('#graphics').append(`
                <div id="${value.ga}" class="col-sm-12 col-md-6">
                    <figure class="highcharts-figure card">
                        <div id="chart-${value.ga}" ></div>
                    </figure>
                </div>`)
                Highcharts.chart(`chart-${value.ga}`, {
                chart: {
                    type: 'area'
                },
                title: {
                    text: `${value.name} - (<span class="visitors">${value.visitors}</span>)`
                },
                xAxis: {
                    categories: value.hrs
                },
                yAxis: {
                    title: {
                        text: false
                    },
                    labels: {
                        formatter: function () {
                            return this.value  ;
                        }
                    }
                },
                tooltip: {
                    pointFormat: '<b>{point.y:,.0f}</b> {series.name}'
                },
                plotOptions: {
                    area: {
                        pointStart: 1,
                        marker: {
                            enabled: false,
                            symbol: 'circle',
                            radius: 2,
                            states: {
                                hover: {
                                    enabled: true
                                }
                            }
                        }
                    }
                },
                series: [{
                    name: 'Visitantes por hora',
                    data: value.series
                }]
            });
                $(".loading").fadeOut('slow');
            })
        });
    }


    interval(function(){
        getactiveusers()
    }, 60000);
</script>
