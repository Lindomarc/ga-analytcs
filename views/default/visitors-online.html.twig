{% include 'default/header.html.twig' %}

<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>


<div id="graphic"  class="card" style="display: none" ></div>


<script>

    function visitorsOnline() {
        getJSON('/api/visitors-online.json').then(function (data) {
            $('#graphic').css({"height": "60em", "margin": "0 auto 2em","padding":"1em", "display": "block"});
            Highcharts.chart('graphic', {
                chart: {
                    type: 'bar'
                },
                title: {
                    text: 'Visitantes Online'
                },
                subtitle: {
                    text: 'MSWI Soluções Web Inteligentes'
                },
                xAxis: {
                    categories: data.categories,
                    title: {
                        text: null
                    }
                },
                yAxis: {
                    min: 0,
                    title: {
                        text: 'Usuários',
                        align: 'high'
                    },
                    labels: {
                        overflow: 'justify'
                    }
                },
                tooltip: {
                    valueSuffix: ' '
                },
                plotOptions: {
                    bar: {
                        dataLabels: {
                            enabled: true
                        }
                    }
                },
                legend: false,
                credits: {
                    enabled: false
                },
                series: [{
                    name: 'Agora',
                    data: data.series
                }]
            });
            $(".loading").fadeOut("slow");
        });
    }

    interval(function(){
        visitorsOnline()
    }, 60000);
</script>

