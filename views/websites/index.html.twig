{% include 'default/header.html.twig' %}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Lista de Sites</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a href="/websites/add" class="btn btn-sm btn-outline-primary">Adicionar</a>
        </div>
    </div>
</div>
<div class="card table-responsive">
    <div class="card-header"></div>
    <table class="table table-striped table-sm ">
        <thead>
        <th>Nome</th>
        <th>GA:</th>
        <th></th>
        </thead>
        <tbody>
        {% for row in data %}
            <tr id="item-id-{{ row.id }}">
                <td>{{ row.name }}</td>
                <td>{{ row.tracking_id }}</td>
                <td class="justify-content-between">

                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <span class="  dropdown-toggle btn btn-sm btn-success" data-toggle="dropdown" role="button"
                                  aria-expanded="false">

                            </span>
                            <div class="dropdown-menu">
                                <a href="/websites/permission/{{ row.id }}"
                                   class="btn btn-default btn-sm dropdown-item">Permissão</a>
                                <a href="/websites/edit/{{ row.id }}" class="btn btn-primary btn-sm dropdown-item">Editar</a>
                                <span
                                {{ row.id }}
                                    onclick="deleteItem('{{ row.id }}')"
                                    class="btn btn-sm btn-danger dropdown-item">
                                Remover
                            </span>
                            </div>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% include 'default/footer.html.twig' %}

<script>
    function deleteItem(id) {
        if (confirm('Vocẽ deseja remover esse item?')) {
            let data = {
                delete: true,
                id: id
            }
            $.post(`/websites/delete`, data,
                function (response) {
                    if (response) {
                        $(`#item-id-${id}`).remove()
                    }
                }
            );
        }
    }

    $(".loading").hide();
</script>