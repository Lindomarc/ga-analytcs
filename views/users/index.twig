{% include 'default/header.html.twig' %}
<div class="container mb-5">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Lista de Usuários</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a href="/users/add"  class="btn btn-sm btn-outline-primary">Adicionar</a>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header"></div>
            <table class="table table-striped table-sm ">
                <thead>
                <th>id</th>
                <th>Nome</th>
                <th>Email</th>
                <th></th>
                </thead>
                <tbody>
                {% for row in data.users %}
                    <tr id="item-id-{{ row.id }}">
                        <td>{{ row.id }}</td>
                        <td>{{ row.name }}</td>
                        <td>{{ row.email }}</td>
                        <td class="justify-content-between">
                            <a href="/websites/permission/{{ row.id }}" class="btn btn-default btn-sm">Permissão</a>
                            <a href="/websites/edit/{{ row.id }}" class="btn btn-primary btn-sm">Editar</a>
                            <span
                                {{ row.id }}
                                    onclick="deleteItem('{{ row.id }}')"
                                    type="button"
                                    class="btn btn-sm btn-danger">
                                Remover
                            </span>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
</div>
{% include 'default/footer.html.twig' %}

<script>
    function deleteItem(id) {
        if (confirm('Vocẽ deseja remover esse item?')) {
            let data = {
                delete: true,
                id: id
            }
            $.post(`/users/delete`, data,
                function (response) {
                    if (response) {
                        $(`#item-id-${id}`).remove()
                    }
                }
            );
        }
    }

    $(".loading").hide();
</script>